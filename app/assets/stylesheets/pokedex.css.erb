* {
	box-sizing: border-box;
}

html {
	background: url(<%= asset_path 'black_tile.jpg' %>);
	font-size: 16px;
}

#wrapper {
	width: 85%;
	margin: 0 auto;
}

h1 {
	font-size: 2em;
	margin: 0;
	line-height: 1;
}

header {
	text-align: center;
	letter-spacing: 30px;
	height: 90px;
	padding: 29px 15px;
	background: white;
	border-radius: 50px;
}

#search {
	margin: 20px 0;
	width: 100%;
	height: 30px;
	border-radius: 5px;
}

.pokemon {
	color: white;
	padding: 10px 30px;
	height: 70px;
	background: purple;
	border-radius: 30px;
}

.pokemon .name {
	display: inline-block;
	line-height: 50px;
	float: left;
	margin: 0;
}

.pokemon .number {
	line-height: 50px;
	float: left;
}

.pokemon .sprite {
	display: inline-block;
	width: 50px; height: 50px;
	background: #000;
	margin: 0 15px;
	float: left;
}

.pokemon .type {
	float: left;
	line-height: 50px;
	margin: 0 15px;
}